generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company{
  companyId String @id @default(uuid())
  name String @unique
  totalNumber Int @default(0)
  userId String 
  bus Bus[]
}

model Bus{
  busId String @id @default(uuid())
  busNumber String 
  busDriver String?
  from String
  destination String
  departureTime DateTime
  reachTime DateTime
  price Int
  companyId String
  comapny Company @relation(fields: [companyId],references: [companyId],onDelete: Cascade)
  seats Seat[]
}
// Seat Schema
enum Position {
  ws
  ms
}
model Seat{
  seatId String @id @default(cuid())
  position Position
  datesBooked DateTime[]
  busId String
  seatNo Int 
  bus Bus @relation(fields: [busId],references: [busId],onDelete: Cascade)
}